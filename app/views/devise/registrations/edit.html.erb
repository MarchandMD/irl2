<div class="w-full max-w-4xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-4xl font-black uppercase tracking-tight text-gray-900 dark:text-white mb-2">Account Settings</h1>
    <p class="text-gray-600 dark:text-gray-400 text-lg">Manage profile and security preferences</p>
  </div>

  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to :back, class: "inline-flex items-center gap-2 text-emerald-600 dark:text-emerald-400 hover:text-emerald-700 dark:hover:text-emerald-300 font-semibold text-sm uppercase tracking-wide transition" do %>
      ‚Üê Back
    <% end %>
  </div>

  <!-- Main Settings Card -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 shadow-lg mb-8">
    <div class="mb-6">
      <h2 class="text-2xl font-bold uppercase tracking-tight text-gray-900 dark:text-white mb-1">
        Profile Information
      </h2>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Update account credentials and security settings
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="p-4 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg">
            <p class="text-sm text-yellow-800 dark:text-yellow-400">
              ‚è≥ Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
            </p>
          </div>
        <% end %>

        <!-- Password Section Divider -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-bold uppercase tracking-wide text-gray-900 dark:text-white mb-1">
            Change Password
          </h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
            Leave fields blank to keep current password
          </p>

          <div class="space-y-6">
            <!-- New Password Field -->
            <div>
              <%= f.label :password, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" do %>
                New Password
                <span class="text-xs font-normal normal-case text-gray-500 dark:text-gray-400 ml-2">
                  (leave blank if not changing)
                </span>
              <% end %>
              <%= f.password_field :password,
                  autocomplete: "new-password",
                  placeholder: "Enter new password",
                  class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
              <% if @minimum_password_length %>
                <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                  Minimum <%= @minimum_password_length %> characters required
                </p>
              <% end %>
            </div>

            <!-- Password Confirmation Field -->
            <div>
              <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
              <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  placeholder: "Re-enter new password",
                  class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
            </div>
          </div>
        </div>

        <!-- Current Password Section Divider -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
          <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-4">
            <p class="text-sm text-blue-800 dark:text-blue-400">
              üîí <strong>Security verification required:</strong> Enter current password to save changes
            </p>
          </div>

          <%= f.label :current_password, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
          <%= f.password_field :current_password,
              autocomplete: "current-password",
              placeholder: "Enter current password",
              class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Update Account", class: "w-full px-6 py-4 bg-emerald-500 text-black font-bold text-lg uppercase tracking-wider hover:bg-emerald-400 transition rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone Card -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl border-2 border-red-200 dark:border-red-900/50 p-8 shadow-lg">
    <div class="mb-6">
      <h2 class="text-2xl font-bold uppercase tracking-tight text-red-600 dark:text-red-400 mb-1 flex items-center gap-2">
        <span>‚ö†Ô∏è</span>
        Danger Zone
      </h2>
      <p class="text-sm text-gray-600 dark:text-gray-400">
        Irreversible account actions
      </p>
    </div>

    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6">
      <h3 class="text-lg font-bold text-red-800 dark:text-red-300 mb-2">Delete Account</h3>
      <p class="text-sm text-red-700 dark:text-red-400 mb-4">
        Once account is deleted, all tasks, submissions, and data will be permanently removed. This action cannot be undone.
      </p>
      <%= button_to "Delete My Account",
          registration_path(resource_name),
          data: {
            confirm: "Are you absolutely sure? This will permanently delete your account and all associated data. Type 'DELETE' to confirm.",
            turbo_confirm: "Are you absolutely sure? This will permanently delete your account and all associated data."
          },
          method: :delete,
          class: "px-6 py-3 bg-red-600 dark:bg-red-700 text-white font-bold text-sm uppercase tracking-wider hover:bg-red-700 dark:hover:bg-red-800 transition rounded-lg shadow" %>
    </div>
  </div>
</div>

<div class="w-full max-w-6xl mx-auto">
  <div class="grid md:grid-cols-2 gap-8 items-center">
    <!-- Left Side: Hero/Branding -->
    <div class="hidden md:block">
      <div class="relative py-16 px-8 overflow-hidden bg-gradient-to-br from-gray-900 via-purple-900 to-blue-900 rounded-3xl shadow-2xl">
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
        <div class="relative z-10">
          <h1 class="text-5xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400 mb-6">
            Welcome Back
          </h1>
          <p class="text-xl text-gray-300 font-light leading-relaxed mb-8">
            Log in to continue your missions. The network remembers your achievements, and new challenges await.
          </p>

          <div class="space-y-4 text-gray-300">
            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üìç</span>
              <div>
                <h3 class="font-bold text-white mb-1">Track Progress</h3>
                <p class="text-sm text-gray-400">View your completed missions and active challenges</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üí¨</span>
              <div>
                <h3 class="font-bold text-white mb-1">Stay Connected</h3>
                <p class="text-sm text-gray-400">Engage with the community and share experiences</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üéØ</span>
              <div>
                <h3 class="font-bold text-white mb-1">New Challenges</h3>
                <p class="text-sm text-gray-400">Fresh missions are posted daily by the community</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side: Login Form -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 shadow-xl">
      <div class="mb-8">
        <h2 class="text-3xl font-black uppercase tracking-tight text-gray-900 dark:text-white mb-2">
          Agent Login
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Access your account and continue the mission.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-6">
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "agent@irl2.network",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
          </div>

          <!-- Password Field -->
          <div>
            <%= f.label :password, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "w-4 h-4 text-emerald-600 bg-white dark:bg-gray-900 border-gray-300 dark:border-gray-600 rounded focus:ring-2 focus:ring-emerald-500" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700 dark:text-gray-300" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Log In", class: "w-full px-6 py-4 bg-emerald-500 text-black font-bold text-lg uppercase tracking-wider hover:bg-emerald-400 transition rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center space-y-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            New to IRL2?
            <%= link_to "Create Account", new_registration_path(resource_name), class: "font-bold text-emerald-600 dark:text-emerald-400 hover:text-emerald-500 dark:hover:text-emerald-300 transition" %>
          </p>

          <div class="flex flex-wrap justify-center gap-4 text-xs">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive unlock?", new_unlock_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Hero (visible only on mobile) -->
    <div class="md:hidden mb-8 py-12 px-6 text-center bg-gradient-to-br from-gray-900 via-purple-900 to-blue-900 rounded-3xl shadow-2xl">
      <h1 class="text-4xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400 mb-4">
        Welcome Back
      </h1>
      <p class="text-lg text-gray-300 font-light">
        Log in to continue your missions
      </p>
    </div>
  </div>
</div>

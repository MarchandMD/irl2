<div class="w-full max-w-6xl mx-auto">
  <div class="grid md:grid-cols-2 gap-8 items-center">
    <!-- Left Side: Hero/Branding -->
    <div class="hidden md:block">
      <div class="relative py-16 px-8 overflow-hidden bg-gradient-to-br from-gray-900 via-emerald-900 to-teal-900 rounded-3xl shadow-2xl">
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
        <div class="relative z-10">
          <h1 class="text-5xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-teal-400 mb-6">
            New Password
          </h1>
          <p class="text-xl text-gray-300 font-light leading-relaxed mb-8">
            Time to set fresh credentials. Choose a strong password to secure your account and protect your mission data.
          </p>

          <div class="space-y-4 text-gray-300">
            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üîí</span>
              <div>
                <h3 class="font-bold text-white mb-1">Secure Your Account</h3>
                <p class="text-sm text-gray-400">Create a strong, unique password</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">‚úÖ</span>
              <div>
                <h3 class="font-bold text-white mb-1">Instant Access</h3>
                <p class="text-sm text-gray-400">Log in immediately after confirmation</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üõ°Ô∏è</span>
              <div>
                <h3 class="font-bold text-white mb-1">Protected Data</h3>
                <p class="text-sm text-gray-400">All missions and progress remain intact</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side: Password Change Form -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 shadow-xl">
      <div class="mb-8">
        <h2 class="text-3xl font-black uppercase tracking-tight text-gray-900 dark:text-white mb-2">
          Change Password
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Enter your new password below.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="space-y-6">
          <!-- New Password Field -->
          <div>
            <%= f.label :password, "New Password", class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" do %>
              New Password
              <% if @minimum_password_length %>
                <span class="text-xs font-normal normal-case text-gray-500 dark:text-gray-400">
                  (<%= @minimum_password_length %> characters minimum)
                </span>
              <% end %>
            <% end %>
            <%= f.password_field :password,
                autofocus: true,
                autocomplete: "new-password",
                placeholder: "Enter new password",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
          </div>

          <!-- Password Confirmation Field -->
          <div>
            <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                placeholder: "Re-enter new password",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition" %>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Change Password", class: "w-full px-6 py-4 bg-emerald-500 text-black font-bold text-lg uppercase tracking-wider hover:bg-emerald-400 transition rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center space-y-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Remember your password?
            <%= link_to "Log In", new_session_path(resource_name), class: "font-bold text-emerald-600 dark:text-emerald-400 hover:text-emerald-500 dark:hover:text-emerald-300 transition" %>
          </p>

          <div class="flex flex-wrap justify-center gap-4 text-xs">
            <%= link_to "Create Account", new_registration_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Hero (visible only on mobile) -->
    <div class="md:hidden mb-8 py-12 px-6 text-center bg-gradient-to-br from-gray-900 via-emerald-900 to-teal-900 rounded-3xl shadow-2xl">
      <h1 class="text-4xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-teal-400 mb-4">
        New Password
      </h1>
      <p class="text-lg text-gray-300 font-light">
        Set fresh credentials
      </p>
    </div>
  </div>
</div>

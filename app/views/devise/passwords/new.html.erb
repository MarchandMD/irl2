<div class="w-full max-w-6xl mx-auto">
  <div class="grid md:grid-cols-2 gap-8 items-center">
    <!-- Left Side: Hero/Branding -->
    <div class="hidden md:block">
      <div class="relative py-16 px-8 overflow-hidden bg-gradient-to-br from-gray-900 via-orange-900 to-red-900 rounded-3xl shadow-2xl">
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>
        <div class="relative z-10">
          <h1 class="text-5xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-red-400 mb-6">
            Reset Access
          </h1>
          <p class="text-xl text-gray-300 font-light leading-relaxed mb-8">
            Lost access codes happen to the best agents. Enter your registered email and recover your account credentials.
          </p>

          <div class="space-y-4 text-gray-300">
            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üìß</span>
              <div>
                <h3 class="font-bold text-white mb-1">Secure Reset Link</h3>
                <p class="text-sm text-gray-400">Receive encrypted instructions via email</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">üîê</span>
              <div>
                <h3 class="font-bold text-white mb-1">New Credentials</h3>
                <p class="text-sm text-gray-400">Set a new password and regain access</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <span class="text-2xl flex-shrink-0">‚ö°Ô∏è</span>
              <div>
                <h3 class="font-bold text-white mb-1">Quick Process</h3>
                <p class="text-sm text-gray-400">Back in action within minutes</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side: Reset Form -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-8 shadow-xl">
      <div class="mb-8">
        <h2 class="text-3xl font-black uppercase tracking-tight text-gray-900 dark:text-white mb-2">
          Forgot Password?
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          No worries. Enter your email to receive reset instructions.
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-6">
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-bold uppercase tracking-wide text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "agent@irl2.network",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition" %>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Send Reset Instructions", class: "w-full px-6 py-4 bg-orange-500 text-white font-bold text-lg uppercase tracking-wider hover:bg-orange-400 transition rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center space-y-3">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Remember your password?
            <%= link_to "Log In", new_session_path(resource_name), class: "font-bold text-emerald-600 dark:text-emerald-400 hover:text-emerald-500 dark:hover:text-emerald-300 transition" %>
          </p>

          <div class="flex flex-wrap justify-center gap-4 text-xs">
            <%= link_to "Create Account", new_registration_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" %>
            <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive unlock?", new_unlock_path(resource_name), class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition" if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Hero (visible only on mobile) -->
    <div class="md:hidden mb-8 py-12 px-6 text-center bg-gradient-to-br from-gray-900 via-orange-900 to-red-900 rounded-3xl shadow-2xl">
      <h1 class="text-4xl font-black uppercase tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-red-400 mb-4">
        Reset Access
      </h1>
      <p class="text-lg text-gray-300 font-light">
        Recover your account credentials
      </p>
    </div>
  </div>
</div>

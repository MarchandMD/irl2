<%= turbo_frame_tag "tasks_list" do %>
  <!-- View Toggle -->
  <div class="mb-6 flex items-center gap-4">
    <button id="defaultViewBtn" class="px-4 py-2 bg-gray-900 dark:bg-gray-700 text-white font-medium text-sm uppercase tracking-wider rounded transition">
      Default
    </button>
    <button id="collapsedViewBtn" class="px-4 py-2 bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm uppercase tracking-wider rounded hover:bg-gray-300 dark:hover:bg-gray-700 transition">
      Collapsed
    </button>
  </div>

  <!-- Task Grid -->
  <div id="taskGrid" class="space-y-4">
    <% if @tasks.any? %>
      <% @tasks.each_with_index do |task, index| %>
        <%
          # Cycle through colors for variety
          colors = [
            { bg: 'emerald', badge_open: 'green', badge_progress: 'blue', badge_completed: 'gray' },
            { bg: 'blue', badge_open: 'green', badge_progress: 'blue', badge_completed: 'gray' },
            { bg: 'purple', badge_open: 'green', badge_progress: 'blue', badge_completed: 'gray' },
            { bg: 'orange', badge_open: 'green', badge_progress: 'blue', badge_completed: 'gray' },
            { bg: 'pink', badge_open: 'green', badge_progress: 'blue', badge_completed: 'gray' }
          ]
          color = colors[index % colors.length]

          # Group badge colors and text
          group_colors = {
            'Urban Nomads' => { color: 'emerald', text: 'Urban Nomads' },
            'Digital Alchemists' => { color: 'purple', text: 'Digital Alchemists' },
            'Street Philosophers' => { color: 'blue', text: 'Street Philosophers' },
            'Midnight Architects' => { color: 'indigo', text: 'Midnight Architects' },
            'Concrete Poets' => { color: 'orange', text: 'Concrete Poets' }
          }
          group_config = if task.user.group.present?
            group_colors[task.user.group] || { color: 'gray', text: task.user.group }
          else
            { color: 'gray', text: 'No Group' }
          end
        %>

        <div class="task-card bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow-lg transition group" data-task-id="<%= task.id %>">
          <!-- Default View (Full Card) -->
          <div class="task-card-default p-6">
            <div class="flex items-start gap-6">
              <!-- Task Number / ID -->
              <div class="flex-shrink-0 w-16 h-16 bg-<%= color[:bg] %>-100 dark:bg-<%= color[:bg] %>-900/30 text-<%= color[:bg] %>-700 dark:text-<%= color[:bg] %>-400 rounded-lg flex items-center justify-center font-mono text-xl font-bold">
                #<%= task.id %>
              </div>

              <!-- Task Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-4 mb-2">
                  <%= link_to task_path(task), data: { turbo_frame: "_top" } do %>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition cursor-pointer">
                      <%= task.title %>
                    </h3>
                  <% end %>
                  <span class="flex-shrink-0 px-3 py-1 bg-<%= group_config[:color] %>-100 dark:bg-<%= group_config[:color] %>-900/30 text-<%= group_config[:color] %>-800 dark:text-<%= group_config[:color] %>-400 text-xs font-bold uppercase rounded-full">
                    <%= group_config[:text] %>
                  </span>
                </div>

                <p class="text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
                  <%= task.description %>
                </p>

                <div class="flex items-center gap-6 text-sm text-gray-500 dark:text-gray-400">
                  <div class="flex items-center gap-1">
                    <span class="font-mono">üë§</span>
                    <span>Created by <strong class="text-gray-700 dark:text-gray-300"><%= task.user.email.split('@').first %></strong></span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span>‚¨ÜÔ∏è</span>
                    <span class="font-semibold"><%= task.upvotes_count %></span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span>üí¨</span>
                    <span class="font-semibold"><%= task.submissions_count %> submissions</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span>‚è±Ô∏è</span>
                    <span><%= time_ago_in_words(task.created_at) %> ago</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Collapsed View (Minimal Card) -->
          <div class="task-card-collapsed hidden p-4">
            <div class="flex items-center gap-4">
              <!-- Task Number -->
              <div class="flex-shrink-0 w-12 h-12 bg-<%= color[:bg] %>-100 dark:bg-<%= color[:bg] %>-900/30 text-<%= color[:bg] %>-700 dark:text-<%= color[:bg] %>-400 rounded-lg flex items-center justify-center font-mono text-sm font-bold">
                #<%= task.id %>
              </div>

              <!-- Title -->
              <%= link_to task_path(task), data: { turbo_frame: "_top" }, class: "flex-1" do %>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition cursor-pointer truncate">
                  <%= task.title %>
                </h3>
              <% end %>

              <!-- Stats -->
              <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                <div class="flex items-center gap-1">
                  <span>‚¨ÜÔ∏è</span>
                  <span class="font-semibold"><%= task.upvotes_count %></span>
                </div>
                <div class="flex items-center gap-1">
                  <span>üí¨</span>
                  <span class="font-semibold"><%= task.submissions_count %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-12 text-center">
        <div class="text-6xl mb-4">üîç</div>
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">No tasks found</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          <% if params[:q].present? %>
            No tasks match your search for "<%= params[:q] %>". Try a different search term.
          <% elsif params[:group].present? %>
            No tasks found for <%= params[:group] %>. Be the first to create one!
          <% else %>
            Be the first to create a challenge for the community!
          <% end %>
        </p>
        <%= link_to new_task_path, class: "px-6 py-3 bg-emerald-500 text-black font-bold text-sm uppercase tracking-wider hover:bg-emerald-400 transition rounded" do %>
          + Create Task
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-8 flex items-center justify-center gap-2">
    <button class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition disabled:opacity-50" disabled>
      Previous
    </button>
    <button class="px-4 py-2 bg-emerald-500 text-black font-bold rounded">
      1
    </button>
    <button class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
      2
    </button>
    <button class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
      3
    </button>
    <button class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition">
      Next
    </button>
  </div>

  <script>
    function initializeTaskView() {
      const defaultViewBtn = document.getElementById('defaultViewBtn');
      const collapsedViewBtn = document.getElementById('collapsedViewBtn');
      const taskCards = document.querySelectorAll('.task-card');

      if (!defaultViewBtn || !collapsedViewBtn) return;

      function setView(viewType) {
        taskCards.forEach(card => {
          const defaultView = card.querySelector('.task-card-default');
          const collapsedView = card.querySelector('.task-card-collapsed');

          if (viewType === 'default') {
            defaultView.classList.remove('hidden');
            collapsedView.classList.add('hidden');
          } else {
            defaultView.classList.add('hidden');
            collapsedView.classList.remove('hidden');
          }
        });

        if (viewType === 'default') {
          defaultViewBtn.classList.remove('bg-gray-200', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
          defaultViewBtn.classList.add('bg-gray-900', 'dark:bg-gray-700', 'text-white');
          collapsedViewBtn.classList.remove('bg-gray-900', 'dark:bg-gray-700', 'text-white');
          collapsedViewBtn.classList.add('bg-gray-200', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        } else {
          collapsedViewBtn.classList.remove('bg-gray-200', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
          collapsedViewBtn.classList.add('bg-gray-900', 'dark:bg-gray-700', 'text-white');
          defaultViewBtn.classList.remove('bg-gray-900', 'dark:bg-gray-700', 'text-white');
          defaultViewBtn.classList.add('bg-gray-200', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        }

        localStorage.setItem('taskViewMode', viewType);
      }

      defaultViewBtn.addEventListener('click', () => setView('default'));
      collapsedViewBtn.addEventListener('click', () => setView('collapsed'));

      const savedView = localStorage.getItem('taskViewMode') || 'default';
      if (savedView === 'collapsed') {
        setView('collapsed');
      }
    }

    // Initialize on initial page load
    initializeTaskView();

    // Re-initialize after Turbo Frame update
    document.addEventListener('turbo:frame-load', initializeTaskView);
  </script>
<% end %>
